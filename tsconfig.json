{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "Bundler",
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "build",
    "node_modules",
    "test"
  ]
}
