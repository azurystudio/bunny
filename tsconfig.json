{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "build",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "test"
  ]
}
